<mvc:View
	controllerName="Thesis.thesis.controller.AccomodationReservation"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="AccomodationReservationPage"
>
    <content>	
    <VBox
    >
		    <Text
                text="Szállás neve" />
            <Input 
            id="idAccomodationName"
            editable="disabled"
            width="10%"
            />
            <Text 
            id="idTextOutput"
            />
            <Text
                text="Szállás helye" />
            <Input 
            id="idAccomodationPlace"
            editable="disabled"
            width="10%"/>
            <Text
                text="Leírása" />
            <Input 
            id="idAccomodationDescription"
            editable="disabled"
            width="30%"
            />
            <Text
                text="Ár/Fő/Éj" />
            <Input 
            id="idAccomodationPrice"
            editable="disabled"
            width="10%"/>
            <Text
                text="Foglalható" />
        <HBox >
            <Input 
            id="idAccomodationDateFrom"
            editable="disabled"
            width="100%"/>
            <Input 
            id="idAccomodationDateTo"
            editable="disabled"
            width="100%"/>
        </HBox>
    </VBox>
    <HBox
    >
        <DatePicker
		id="idDpReservation1"
        placeholder="Mettől"
		valueFormat="ddMMyyyy"	/>
        <DatePicker
		id="idDpReservation2"
        placeholder="Meddig"
		valueFormat="ddMMyyyy"	/>
    </HBox>
        
            <Text
                text="Adja meg a személyek számát" />
            <Input
                id="idPersonNumberInput"
            />
            <Text
                text="Fizetési mód" />
            <ComboBox
                items=""
            />
            <Text
                text="Foglaló Neve" />
            <Input
                id="idPersonNameInput"
                liveChange="BillingDataValidition"
            />
            <Text
                text="Irányítószám" />
            <Input
                id="idZIPInput"
                liveChange="BillingDataValidition"
            />
            <Text
                text="Város" />
            <Input
                id="idCityInput"
                liveChange="BillingDataValidition"                
            />
            <Text
                text="Utca,házszám" />
            <Input
                id="idStreetInput"
                liveChange="BillingDataValidition"
            />
            <Button
                text="Foglalás"
                press="onReservationFinish" />
            <Button
                text="Mégse"
                press="onExitReservation" />

    </content>


</Page>
</mvc:View>