<mvc:View
	controllerName="Thesis.thesis.controller.AccomodationReservation"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="AccomodationReservationPage"
>
    <content>	
    <VBox
    >
		    <Text
                text="Szállás neve" />
            <Input 
            id="idAccomodationName"
            editable="disabled"
            width="30%"
            />
            <Text 
            id="idTextOutput"
            />
            <Text
                text="Szállás helye" />
            <Input 
            id="idAccomodationPlace"
            editable="disabled"
            width="30%"/>
            <Text
                text="Leírása" />
            <Input 
            id="idAccomodationDescription"
            editable="disabled"
            width="30%"
            />
            <Text
                text="Ár/Fő/Éj" />
            <Input 
            id="idAccomodationPrice"
            editable="disabled"
            width="20%"/>
            <Text
                text="Foglalható" />
        <HBox >
            <Input 
            id="idAccomodationDateFrom"
            editable="disabled"
            width="100%"/>
            <Input 
            id="idAccomodationDateTo"
            editable="disabled"
            width="100%"/>
        </HBox>
    </VBox>
    <VBox
    >
        <Text text="Válasszon időpontot:"/>
    <HBox>
        <DatePicker
		id="idDpReservation1"
        placeholder="Mettől"
		valueFormat="ddMMyyyy"
        liveChange="BillingDataValidition"	/>
        <DatePicker
		id="idDpReservation2"
        placeholder="Meddig"
		valueFormat="ddMMyyyy"
        liveChange="BillingDataValidition"	/>
    </HBox>
    </VBox>
        <VBox
        >
            <Text  text="Adja meg a személyek számát" />
            <Input
                id="idPersonNumberInput"
                liveChange="BillingDataValidition"
                width="16%"
            />
            <Text
                text="Fizetési mód" />
            <ComboBox
                id="idPaymentSelect"
                forceSelection="true"
                required="true"
                items="{StaticModel>/PaymentCollection}">

            <c:Item key="{StaticModel>PaymentId}" text="{StaticModel>PaymentType}" />
            </ComboBox>
                 
        </VBox>

        <VBox justifyContent="Start"
            >
            <Text
                text="Foglaló Neve" />
            <Input
                id="idPersonNameInput"
                liveChange="BillingDataValidition"
                maxLength="40"
            />
                
            </VBox>
            <VBox justifyContent="End" alignContent="End"
            >
            <Text
                text="Irányítószám" />
            <Input
                id="idZIPInput"
                liveChange="BillingDataValidition"
                maxLength="4"
            />
                
            </VBox>
            <Text
                text="Város" />
            <Input
                id="idCityInput"
                liveChange="BillingDataValidition"  
                maxLength="20"             
            />
            <Text
                text="Utca,házszám" />
            <Input
                id="idStreetInput"
                liveChange="BillingDataValidition"
                maxLength="40"
            />
  
        <VBox justifyContent="Center" width="100%" alignContent="Center" alignItems="Center"
        >
            <Button
                text="Foglalás"
                press="onReservationFinish"
                 />
            <Button
                text="Mégse"
                press="onExitReservation" />
        </VBox>
    </content>


</Page>
</mvc:View>