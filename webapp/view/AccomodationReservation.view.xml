<mvc:View
	controllerName="Thesis.thesis.controller.AccomodationReservation"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="AccomodationReservationPage"
>
    <content>	
	<List
			class="sapUiSmallMarginBottom"
			showSeparators="None"
				items="{ path: 'Accomodation>/' }"
	>
	<ColumnListItem>
	<FlexBox
	>
		<Text 
		text="Szállás neve"/>
		<Text text="{Accomodation>Name}" />
		<Text 
		text="Szállás helye"/>
		<Text text="{Accomodation>City}" />
		<Text 
		text="Leírása"/>
		<Text text="{Accomodation>Description}" />
		<Text 
		text="Ár/Fő/Éj"/>
		<Text text="{Accomodation>Price}" />	
	</FlexBox>		
		</ColumnListItem>
	</List>
	<VBox 
	
	>

		<DateRangeSelection/>
		<Text 
		text="Adja meg a személyek számát"/>
		<Input 
		id= "idPersonNumberInput"
		/>
		<Text 
		text="Fizetési mód"/>
		<ComboBox ></ComboBox>
		<Text 
		text="Foglaló Neve"/>
		<Input 
		id= "idPersonNameInput"
		/>
		<Text 
		text="Irányítószám"/>
		<Input 
		id= "idZIPInput"
		/>
		<Text 
		text="Város"/>
		<Input 
		id= "idCityInput"
		/>
		<Text 
		text="Utca,házszám"/>
		<Input 
		id= "idStreetInput"
		/>
        <Button 
		text="Reservation"/>
			</VBox>	
    </content>


</Page>
</mvc:View>