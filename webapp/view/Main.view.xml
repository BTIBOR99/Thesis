<mvc:View xmlns:widgets="sap.ui.integration.widgets" xmlns:filterbar="sap.ui.comp.filterbar"
	controllerName="Thesis.thesis.controller.Main"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="MainPage">

				<FlexBox
				height="100px"
				alignItems="Start"
				justifyContent="End">
					<Button 
					width="100%"
					text="Kilépés"
					press="onExit"
			></Button>
				</FlexBox>
						<SearchField width="50%" placeholder="Keresés" search="onSearch" />
			
				<filterbar:FilterBar >
				</filterbar:FilterBar>
		<FlexBox 
			items="{ path: 'AccomodationModel>/' }"
			alignContent="Stretch"	
			alignItems="Stretch"
			backgroundDesign="Transparent"
			direction="Row"
			displayInline="false"
			fitContainer="false"
			height="auto"
			justifyContent="Start"
			renderType="Div"
			width="auto"
			wrap="Wrap"
		>
			<items>
				<f:Card class="sapUiMediumMargin" width="300px">
					<f:header>
						<card:Header title="{AccomodationModel>Name}" />
					</f:header>
					<f:content>
						<FlexBox direction="Column" height="auto" alignItems="Center" justifyContent="Center"
							alignContent="Center">
							<Text text="{AccomodationModel>City}" />
							<Text text="{AccomodationModel>DateFrom}"  />
							<Text text="{AccomodationModel>DateTo}" />
							<Text text="{AccomodationModel>Description}" />
							<Text text="{AccomodationModel>Price}" />
						    <Button text="Foglalás" press="onReservation"  />
							<Button
								id="btnDeleteReservation"
								icon="sap-icon://batch-payments"
								press="onDeleteReservation"
								visible="false"
							>
								
							</Button>
						</FlexBox>
					</f:content>
				</f:Card>
			</items>
		</FlexBox>
</Page>
</mvc:View>