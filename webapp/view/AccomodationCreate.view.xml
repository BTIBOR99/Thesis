<mvc:View
	controllerName="Thesis.thesis.controller.AccomodationCreate"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:u="sap.ui.unified"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="AccomodationCreatePage"
>
    <content>
		<VBox
		>
		<Text text="Szállás Neve:"/>
				<Input 
		id="idAccomodationNameInput"
		width="50%"/>	
		<Text text="Képek hozzáadása:" />
	<u:FileUploader 
            id="myFileUpload"
            name="myFileUpload"
            tooltip="Upload your file"
            change="handleSelectFile"
            sameFilenameAllowed="false"
            ypeMissmatch="pdf,application/pdf"/>

		<Text text="Foglalhatóság ideje"/>
		<HBox
		>
		<DatePicker
		id="idDp1"
		valueFormat="ddMMyyyy"
		placeholder="Mettől"	/>
		<DatePicker
		id="idDp2"
		valueFormat="ddMMyyyy"
		placeholder="Meddig"/>
		</HBox>
		<Text
		text= "Szállás Helye:"/> 
		<Input
		id = "idAccomodationPlaceInput"
		width="50%"/>
		<Text
			text="Ár/Fő/Éj:"/> 
		<Input
		id = "idAccomodationCostInput"
		width="50%"/>
		<Text
			text="Leírás:"/> 
		<Input
		id = "idAccomodationDescriptionInput"
		 width="100%"/>
		</VBox>	 
        <Button 
		text="Létrehozás"
		press="onCreate"/>
		<Button
			text="Mégse"
			press="onExitCreate"
		/>
    </content>

</Page>
</mvc:View>