<mvc:View
	controllerName="Thesis.thesis.controller.AccomodationCreate"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>

<Page id="AccomodationCreatePage"
>
    <content>
		<VBox
		>
		<HBox
		>
		<Text
		text="Szállás Neve:"/>	
		
		<Text
			text="Képek hozzáadása:" />
		</HBox>
		<HBox>
		<Input 
		id="idAccomodationNameInput"
		width="50%"/>
		<Button 
		text="+"
		press="onAddPictures"/>		
		</HBox>
		<DatePicker
		id="idDp1"
		valueFormat="ddMMyyyy"	/>
		<DatePicker
		id="idDp2"
		valueFormat="ddMMyyyy"	/>
		<Text
		text= "Szállás Helye:"/> 
		<Input
		id = "idAccomodationPlaceInput"
		width="50%"/>
		<Text
			text="Ár/Fő/Éj:"/> 
		<Input
		id = "idAccomodationCostInput"
		width="50%"/>
		<Text
			text="Leírás:"/> 
		<Input
		id = "idAccomodationDescriptionInput"
		 width="100%"/>
		</VBox>	
        <Button 
		text="Létrehozás"
		press="onCreate"/>
		<Button
			text="Mégse"
			press="onExitCreate"
		/>

    </content>

</Page>
</mvc:View>